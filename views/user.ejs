<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>User</title>
   <style>
      table, th, td {
         border: 2px solid black;
         border-collapse: collapse;
         padding: 8px;
      }
   </style>
</head>
<body>

   <table>
      <tr>
         <th>ID</th>
         <th>Username</th>
         <th>Email</th>
         <th>Password</th>
         <th>Edit button</th>
      </tr>
      <% rows.forEach(user => { %>
         <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>

            <td>
               <form action="/user/<%= user.id %>/edit" method="get
                  ">
               <button>Edit username</button>
               </form>

            </td>

         </tr>
      <% }); %>
   </table>

</body>
</html>
